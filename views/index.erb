<html>
  <head>
    <style>
      body {
        <% if message == "Way too high!" || message == "Way too low!" %>
          background: red
        <% elsif message == "Too high!"  || message == "Too low!" %>
          background: #e86363
        <% else %>
          background: green
        <% end %>
      }
    </style>
  </head>
  <body>
    <p>
      <%= message %>
    </p>
    <p>
      <% if number == guess %>
        The Secret Number is <%= number %>
      <% end %> 
    </p>
    <form>
      <input type='text' name='guess' />
      <input type='submit' value = 'Guess!' />
  </body>
</html>